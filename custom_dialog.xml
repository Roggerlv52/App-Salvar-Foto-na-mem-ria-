<LinearLayout xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tx_new_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="Nova categoria:"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/et_new_categore_cusd"
        style="@style/Theme.MyApplication.FormEditText"
        android:inputType="none"	
        android:maxLength="53" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" >

        <ImageView
            android:id="@+id/cancel_custon_dialog"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_x_close"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ok_custon_dialog"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:src="@drawable/ic_done" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>